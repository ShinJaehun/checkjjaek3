          <div class="media">
            <%= link_to image_tag(avatar_url(comment.user), class: "rounded-circle user-photo", title: comment.user.name), comment.user %>
              <div class="media-body">
                <div class="panel-heading">
                  <strong><%= link_to comment.user.name, comment.user %></strong> <span class="text-muted"><%= "#{time_ago_in_words(comment.created_at)} 전" %> </span>
                </div>
                <div class="panel-body">
                  <%= comment.content %> 
                  <!--댓글 옆에 댓글 삭제 버튼 만들어 놓기-->
                  <% if can? :destroy, comment %>
                    <%= link_to( content_tag(:i, "",class: ["far", "fa-times-circle"]), post_comment_path(comment.commentable, comment), method: :delete, data: { confirm: '정말 삭제하시겠습니까?' } )%>
                  <% end %>
                </div>
              </div>
          </div>  
