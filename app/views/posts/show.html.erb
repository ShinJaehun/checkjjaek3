<div class="row py-2">

  <div class="col-md-4 order-md-2 md-4 text-center">
    <div class="card my-4" style="width: 18rem;">
      <div class="profile-image">
        <%= link_to image_tag(user_avatar(@post.user, 150), class: "rounded-circle", style: "padding: 30px;"), @post.user %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><strong><%= link_to @post.user.name, @post.user %></strong>님의 책짹</h5>
      </div>
    </div>

    <% if @post.like_users.count > 0 %>
      <div class="card my-4 book-reader" style="width: 18rem;">
        <div class="card-body">
          <div class="title">이 책짹을 좋아하는 분들</div>
          <div class="reader-list">
            <% @post.like_users.each do |u| %>
              <%= link_to image_tag(user_avatar(u, 30), class: "rounded-circle", title: u.name), u %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

  </div>

  <div class="col-md-8 order-md-1">
    <div class="post-list card my-4">
      <% if @post.postable_type == "Book" and @post.post_recipient_type == "User" %>
        <%= render 'posts/books/item', post: @post %>
      <% elsif @post.postable_type == "Message" and @post.post_recipient_type == "User" %>
        <%= render 'posts/messages/item', post: @post %>
      <% elsif @post.postable_type == "Photo" and @post.post_recipient_type == "User" %>
        <%= render 'posts/photos/item', post: @post %>
      <% elsif @post.postable_type == "Book" and @post.post_recipient_type == "Group" %>
        <%= render 'posts/books/item_group', post: @post %>
      <% elsif @post.postable_type == "Message" and @post.post_recipient_type == "Group" %>
        <%= render 'posts/messages/item_group', post: @post %>
      <% elsif @post.postable_type == "Photo" and @post.post_recipient_type == "Group" %>
        <%= render 'posts/photos/item_group', post: @post %>
      <% else %>
      <% end %>
    </div>
  </div>

</div>
