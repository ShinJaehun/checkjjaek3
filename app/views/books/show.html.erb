<div class="row py-2">

  <div class="col-md-4 order-md-2 md-4 text-center">
    <div class="card my-4 book-info" style="width: 18rem;">
      <div class="book-image">
        <!--book image-->
        <%= link_to image_tag(book_thumbnail250(@book.thumbnail), class: "border mx-3", width: '250px'), @book.url, target: "_blank" %>  
      </div>
      
      <div class="book-detail">
        
        <h4 class="card-title mb-2"><%= link_to @book.title, @book.url, target: "_blank" %></h4>
        <div class="card-subtitle my-3 ml-2">
  
          <% if @book.publisher.present? %>
            <div>
              <strong class="text-muted">출판사</strong>&nbsp;&nbsp;<%= @book.publisher.html_safe %>
            </div>
          <% end %>
          
	  	  </div>

  			<div class="description">
          <% if @book.contents.present? %>
            <%= @book.contents %>
          <% end %>
  			</div>

      </div>
    </div>

  <div class="col-md-8 order-md-1">
    <%# render 'post_list' %>
  </div>

</div>