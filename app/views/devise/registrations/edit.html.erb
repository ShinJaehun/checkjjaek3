<header class="masthead">
  <div class="overlay"></div>

  <div class="container">
    <div class="row">
      <div class="col-xs-4 mx-auto">

        <div class="card card-content" style="width: 20rem; display: block;">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-user-info pb-5"}) do |f| %>
            <div class="useravater text-center pb-3">
              <%= image_tag user_avatar(resource, 100), class: "rounded-circle ", style: "padding: 30px;" %>
              <%= f.file_field :avatar %>
            </div>

            <label for="inputName">이름</label>
            <%= f.text_field :name, required: true, autofocus: true, id: "inputName", class: "form-control"%>
            <label for="inputEmail">메일주소</label>
            <%= f.email_field :email, required: true, id: "inputEmail", class: "form-control"%>
            <label for="inputPassword">변경할 비밀번호</label>
            <%= f.password_field :password, autocomplete: "off", required: false, id: "inputPassword", class: "form-control"%>
            <label for="inputPasswordConfirmation">비밀번호 확인</label>
            <%= f.password_field :password_confirmation, required: false, id: "inputPasswordConfirmation", class: "form-control"%>
            <label for="inputCurrentPassword">현재 비밀번호를 입력하세요</label>
            <%= f.password_field :current_password, required: false, id: "inputCurrentPassword", class: "form-control"%>

            <button class="btn btn-outline-secondary btn-signin" type="submit">정보수정</button>

            <div class="goback">
              <label><%= link_to "뒤로 가기", :back, class: "extra-link" %></label>
            </div>

            <div class="user-delete">
              <label><%= link_to "계정 삭제", registration_path(resource_name), class: "extra-link", style: "color: red; font-size: 60%;", data: { confirm: "정말 계정을 삭제하나요?" }, method: :delete %></label>
            </div>

          <% end %>
        </div><!-- /card-container -->
      </div>
    </div>
  </div>
</header>

